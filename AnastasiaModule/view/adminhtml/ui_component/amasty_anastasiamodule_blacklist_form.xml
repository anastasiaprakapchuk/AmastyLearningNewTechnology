<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                amasty_anastasiamodule_blacklist_form.amasty_anastasiamodule_blacklist_form_data_source
            </item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save">
                <class>save primary</class>
                <label translate="true">Save blacklist</label>
                <url path="*/*/save"/>
            </button>
            <button name="back">
                <class>back</class>
                <label translate="true">Back</label>
                <url path="*/*/index"/>
            </button>
        </buttons>
        <namespace>amasty_anastasiamodule_blacklist_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>amasty_anastasiamodule_blacklist_form.amasty_anastasiamodule_blacklist_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="amasty_anastasiamodule_blacklist_form">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="anastasiamodule/blacklist/save"/>
        </settings>
        <dataProvider class="Amasty\AnastasiaModule\Ui\Component\Form\DataProvider"
                      name="amasty_anastasiamodule_blacklist_form_data_source">
            <settings>
                <requestFieldName>blacklist_id</requestFieldName>
                <primaryFieldName>blacklist_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Blacklist data</label>
        </settings>
        <field name="sku" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Blacklist sku</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">sku</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="qty" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Blacklist qty</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">qty</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="email_body" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Email Body</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="dataScope" xsi:type="string">email_body</item>
                    <!--                    <item name="validation" xsi:type="array">-->
                    <!--                        <item name="required-entry" xsi:type="boolean">false</item>-->
                    <!--                    </item>-->
                </item>
            </argument>
        </field>
    </fieldset>
</form>




